<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<link rel="stylesheet" href="https://bootswatch.com/4/superhero/bootstrap.min.css">

<head>
    <style>
        .turn1{
            color: #fff;
  			background-color: red;
        } 
        .turn2{
            color: #fff;
  			background-color: blue;
        }
        .invalidMovement{
            color: red;
  			font-size: 2em;
        }
    </style>
</head>


<h1 class="col-md-5 mx-auto">Game</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <%= @board.generateHTMLandCss(@movement) %>
            <%= @controls.returnHTML() %>
            <div class="invalidMovement"><%= @errorMessage %></div>
        </div>
        <div class="col-md-4">
            <% if @board.turn==1 %>
                <div class="turn1"><%= @board.player1.generateHTMLPlayer() %></div>
            <% else%>
                <%= @board.player1.generateHTMLPlayer() %>
            <% end %>
            <% if @board.turn==2 %>
                <div class="turn2"><%= @board.player2.generateHTMLPlayer() %></div>
            <% else%>
                <%= @board.player2.generateHTMLPlayer() %>
            <% end %>
        </div>
    </div>
</div>

<% settings.savedP1.score = @board.countPoints(settings.savedP1.name) %>
<% settings.savedP2.score = @board.countPoints(settings.savedP2.name) %>






